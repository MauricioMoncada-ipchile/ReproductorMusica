<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnPausa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPlay"
        android:layout_alignBottom="@+id/btnPlay"
        android:layout_toRightOf="@+id/btnPlay"
        android:onClick="Pausar"
        android:text="Pause" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPausa"
        android:layout_alignBottom="@+id/btnPausa"
        android:layout_toRightOf="@+id/btnPausa"
        android:onClick="Continuar"
        android:text="Continue" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="72dp"
        android:onClick="iniciar"
        android:text="Play" />

    <TextView
        android:id="@+id/tvPosicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlay"
        android:layout_below="@+id/btnPlay"
        android:layout_marginTop="24dp"
        android:text="Posicion de Reproducción" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlay"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Presione Play para iniciar la canción" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPosicion"
        android:layout_below="@+id/tvPosicion"
        android:layout_marginTop="14dp"
        android:text="Intrucciones : La app consiste en reproducir la canción, en algunos lapsos  de tiempo, la canción se detendra y se realizara un pregunta, si la respuesta es correcta Continuaremos, de lo contrario, la canción comenzará de nuevo. Exito !!. para reproducir la canción pulsa sobre el boton Play, para pausar boton Pausa y para Continuar el boton Continue." />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView1"
        android:onClick="Cerrar"
        android:text="Cerrar App" />

</RelativeLayout>